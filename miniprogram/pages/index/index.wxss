/* miniprogram/pages/index/index.wxss */

.top-img
{
  width: 100%;
  height: 350rpx;
}

.middle
{
  display: flex;
  align-items: center;
  width: 100%;
  height: 180rpx;
}

.smiddle
{
  width: 25%;
  height: 150rpx;
  align-items: center;
  display: flex;
  margin-left: 10rpx;
  flex-direction: column;
}

.mid-img
{
  height: 100rpx;
  width: 100rpx;
}

.fight-list-title {
  padding: 20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.fight-list-title-left {
  display: flex;
  align-items: center;
}

.fight-list-title-icon {
  width: 4rpx;
  height: 26rpx;
  background: #2aaefd;
  margin-right: 20rpx;
}

.fight-list {
  padding-left: 20rpx;
  display: flex;
  height: 235rpx;
}

.fight-list-block {
  width: 170rpx;
  height: 230rpx;
  margin-right: 10rpx;
  flex: 0 0 auto;
}

.fight-list-img {
  width: 180rpx;
  height: 170rpx;
}

.fight-list-block-img {
  width: '';
  height: 100%;
  max-width: 170rpx;
  border-radius: 10rpx;
}

.fight-list-block-title {
  height: 62rpx;
  line-height: 62rpx;
  font-size: 28rpx;
  color: rgb(50,50,50);
  text-align: center;
}

.recommend {
  padding: 20rpx 20rpx 0 20rpx;
  font-size: 30rpx;
  color: #000;
}

.recommend-list {
  padding: 20rpx 20rpx 0 20rpx;
  border-bottom: 10rpx solid #f5f5f5;
}

.recommend-img-block {
  width: 710rpx;
  height: 200rpx;
  text-align: center;
}

.recommend-list-img {
  width: 100%;
  height: 100%;
}

.recommend-title {
  font-size: 28rpx;
  color: #000;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.more_btn
{
   font-size: 30rpx;
   color: grey;    
}