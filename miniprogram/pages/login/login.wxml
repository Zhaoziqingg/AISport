<!--miniprogram/pages/login/login.wxml-->
<van-cell-group>
  <van-field
    value="{{ value }}"
    placeholder="请输入用户名"
    border="{{ false }}"
    bind:change="onChange"
  />
</van-cell-group>

<van-cell-group>
  <van-field
    value="{{ sms }}"
    center
    clearable
    label="短信验证码"
    placeholder="请输入短信验证码"
    border="{{ false }}"
    use-button-slot
  >
    <van-button slot="button" size="small" type="primary"
      >发送验证码</van-button
    >
  </van-field>
</van-cell-group>

<van-button round type="info" color="#222" size="large" bindtap="toIndex">登录</van-button>
