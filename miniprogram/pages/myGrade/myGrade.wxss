/* miniprogram/pages/myGrade/myGrade.wxss */


.session {
  background: #FFF;
  width: 730rpx;
  padding-left: 20rpx;
  margin-top: 10rpx;
  height: 800rpx;
}

.goodsList {
  display: flex;
  width: 700rpx;
  padding: 20rpx 30rpx 20rpx 0rpx;
  border-bottom: 1rpx solid #ececec;
  position: relative;
}

.goodsList:last-child {
  border-bottom: 0rpx solid #ececec;
}

.goodsImg {
  height: 240rpx;
  width: 240rpx;
  border-radius: 12rpx;
  margin-right: 28rpx;
  position: relative;
  overflow: hidden;
}

.goodsImg .goods-img {
  height: 240rpx;
  width: 240rpx;
  border-radius: 12rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.goodsImg .remind {
  width: 240rpx;
  height: 62rpx;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}

.goodsRight {
  width: 432rpx;
}

.goodsTitle {
  font-weight: 700;
  line-height: 36rpx;
}

.goodsUser {
  margin-top: 16rpx;
  display: inline-block;
  border-radius: 10rpx;
  height: 36rpx;
  font-size: 26rpx;
  padding: 0rpx 20rpx;
  line-height: 36rpx;
  color: #f33030;
  background: #fbc0c0;
}

.goodsDet {
  width: 432rpx;
  position: absolute;
  bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.toBook {
  height: 68rpx;
  width: 180rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 34rpx;
  font-weight: 700;
  line-height: 68rpx;
  text-align: center;
  background: #ff7800;
}



.bookNum {
  height: 36rpx;
  width: 138rpx;
  background: #ffc999;
  color: #ff7800;
  font-size: 22rpx;
  border-radius: 2rpx;
  margin-top: 22rpx;
  text-align: center;
  line-height: 36rpx;
}